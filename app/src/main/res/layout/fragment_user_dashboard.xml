<!-- app/src/main/res/layout/fragment_user_dashboard.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.UserDashboardScreen">

    <TextView
        android:id="@+id/textViewDashboardWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, User!"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewUserRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role: Loading..."
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDashboardWelcome"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewSmartHomeSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Smart Home: Loading summary..."
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textViewUserRole"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewActivitySummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Activity: Loading summary..."
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSmartHomeSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Add more summary TextViews or CardViews for other AI modules -->

</androidx.constraintlayout.widget.ConstraintLayout>